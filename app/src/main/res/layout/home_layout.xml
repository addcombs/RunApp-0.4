<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >

    <!--Quick Menu-->
    <LinearLayout
        android:layout_marginTop="55dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <!--Nav Home-->
        <RelativeLayout
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <View
                android:background="@color/piGreen"
                android:layout_width = "match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/groups_icon"
                />

        </RelativeLayout>

        <!--Workouts-->
        <RelativeLayout
            android:id="@+id/workouts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <View
                android:layout_width = "match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/groups_icon"
                />

        </RelativeLayout>

        <!--Groups-->
        <RelativeLayout
            android:id="@+id/groups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="goGroups">

            <View
                  android:layout_width = "match_parent"
                  android:layout_height="2dp"
                  android:layout_below="@id/groups_icon"
                />

        </RelativeLayout>

    </LinearLayout>

    <!--Welcome Message-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        android:id="@+id/welcome"
        android:textSize="20sp"
        android:background="@color/piGreen"
        android:gravity="center"
        android:onClick="goProfile"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >

        <!--Next Runs-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:onClick="goWorkouts"
            android:layout_weight="50"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textSize="20sp"
                    android:src="@drawable/workouts_icon"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upcoming Runs"
                    android:textSize="20sp"
                    android:layout_marginBottom="10dp"
                    />


            </LinearLayout>

            <ListView
                android:id="@+id/recentWorkouts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text=""
                android:textSize="20sp"
                />

        </LinearLayout>

        <!--Horizontal line-->
        <View
            android:background="@color/black"
            android:layout_width = "match_parent"
            android:layout_height="1dp"
            />

        <!--Last Run-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:onClick="goHistory"
            android:layout_weight="50"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textSize="20sp"
                    android:src="@drawable/history_icon"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recent History"
                    android:textSize="20sp"
                    android:layout_marginBottom="10dp"
                    />


            </LinearLayout>

            <ListView
                android:id="@+id/recentHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginStart="50dp"
                android:text=""
                />

        </LinearLayout>

        <!--Horizontal line-->
        <View
            android:background="@color/black"
            android:layout_width = "match_parent"
            android:layout_height="1dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/quick_start"
                android:textSize="40sp"
                android:gravity="center"
                android:textColor="@color/piGreen"
                android:background="@color/dGreen"
                android:onClick="goRun"

                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>